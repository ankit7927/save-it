<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/editor">

        <ListPreference
            app:entries="@array/font_sizes"
            app:entryValues="@array/font_sizes"
            app:key="font_size"
            app:summary="@string/font_size_summery"
            app:title="@string/font_size" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="auto_save"
            android:title="@string/auto_save"
            app:summary="@string/auto_save_summery" />

    </PreferenceCategory>

</PreferenceScreen>